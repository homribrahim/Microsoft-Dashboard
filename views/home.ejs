	<script>
		$(document).ready(function () {
			var formule = 0;
			var points = 0;
			var on = false;
			var reset = false;

			$("#timer").html("0");
			$("#timer2").html("0");
			$("#play").html("Start Reading");
			$("#stop").html("Save Points");


			$("#play").click(function () {
