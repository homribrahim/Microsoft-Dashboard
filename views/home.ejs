			function chrono() {

				/* var time = Math.floor(Math.random() * 50000); */
				formule += 0.45;
				points += 0.016666;
				document.getElementById("timer").innerHTML = formule.toFixed(2);
				document.getElementById("timer2").innerHTML = points.toFixed(2);
				document.getElementById("play").innerHTML = "Reading...";
				document.getElementById("play").disabled = true;


			}

			function Start() {
				if (on === false) {
					document.getElementById("stop").innerHTML = "Save Points";
					document.getElementById("stop").disabled = false;
					timerID = setInterval(chrono, 1000);
					on = true;
					reset = false;

				}

			}

			function Stop() {
				if (on === true) {
					document.getElementById("stop").innerHTML = "Points Saved";
					document.getElementById("stop").disabled = true;
					document.getElementById("play").innerHTML = "Start Reading";
					document.getElementById("play").disabled = false;
					on = false;
					clearTimeout(timerID);

				}
			}

			function Reset() {
				if (reset === false) {
					clearInterval(timerID);
					points = 0;
					formule = 0;
					$("#timer").html("0");
					$("#timer2").html("0");
					reset = true;
				}
			}
		})
	</script>


	<!-- Chrono Script -->

	<script>
		function showTime() {
			var date = new Date();
			var h = date.getHours(); // 0 - 23
			var m = date.getMinutes(); // 0 - 59
			var s = date.getSeconds(); // 0 - 59
			var d = date.getDay(); // 0 - 30
			switch (new Date().getDay()) {
				case 0:
					d = "Sunday";
					break;
				case 1:
					d = "Monday";
					break;
				case 2:
					d = "Tuesday";
					break;
				case 3:
					d = "Wednesday";
					break;
				case 4:
					d = "Thursday";
					break;
				case 5:
					d = "Friday";
					break;
				case 6:
					d = "Saturday";
			}
			var time = d + " , " + h + ":" + ((m < 10) ? '0' + m : + m) + ":" + ((s < 10) ? '0' + s : + s) + " ";
			document.getElementById("MyClockDisplay").innerText = time;
			document.getElementById("MyClockDisplay").textContent = time;
			setTimeout(showTime, 1000);
		}
		showTime();
	</script>

